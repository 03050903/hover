<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view_shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/floatingmenu_shade"
        android:visibility="gone"
        />
    <io.mattcarroll.hover.defaulthovermenu.ziggle.TabStrip
        android:id="@+id/tabstrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />
    <io.mattcarroll.hover.defaulthovermenu.ziggle.HoverMenuContentView2
        android:id="@+id/view_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tabstrip"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        />
    <io.mattcarroll.hover.defaulthovermenu.ziggle.ExitView
        android:id="@+id/exitview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
</merge>